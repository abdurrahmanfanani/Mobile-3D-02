<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#7979FF" />
            <gradient android:angle="-90" android:startColor="#7979FF" android:endColor="#9090F3"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9090F3"/>
            <solid android:color="#7979FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7979FF"/>
            <gradient android:angle="-90" android:startColor="#9090F3" android:endColor="#7979FF"/>
        </shape>
    </item>
</selector>